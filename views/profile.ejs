<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #89f7fe, #66a6ff);
    }

    .profile-container {
      width: 100%;
      max-width: 500px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
      padding: 20px;
      text-align: center;
    }

    h2 {
      margin-bottom: 10px;
      font-size: 24px;
      color: #333;
    }

    p {
      margin-bottom: 20px;
      color: #555;
    }

    .wallets {
      margin-top: 20px;
    }

    .wallet {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      background-color: #f9f9f9;
      border-radius: 5px;
      margin-bottom: 10px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    .wallet:hover {
      background-color: #f1f1f1;
    }

    .wallet-name {
      font-weight: bold;
    }

    .result-popup {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      justify-content: center;
      align-items: center;
    }

    .result-popup-content {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      width: auto;
    }

    .result-popup-content p {
      margin-bottom: 20px;
      font-size: 18px;
    }

    .close-button {
      padding: 10px 20px;
      background-color: #f44336;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    .close-button:hover {
      background-color: #d32f2f;
    }
  </style>
</head>
<body>

  <div class="profile-container">
    <h2>User Profile</h2>
    <p><strong>Username:</strong> <%= name %></p>
    <p><strong>Email:</strong> <%= email %></p>

    <div class="wallets">
      <h3>Your Wallets:</h3>

      <!-- Wallet list -->
      <% for (var i = 0; i < wallet; i++) { %>
      <div class="wallet" onclick="fetchPrivateKey('<%= i + 1 %>')">
        <span class="wallet-name">Wallet <%= i + 1 %></span>
        <span>Public Key: <%= pubkey[i] %></span>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Result popup for displaying private key -->
  <div class="result-popup" id="resultPopup">
    <div class="result-popup-content">
      <p id="resultMessage"></p>
      <button class="close-button" onclick="closeResultPopup()">Close</button>
    </div>
  </div>

  <script>
    // Function to fetch and display private key
    async function fetchPrivateKey(walletId) {
      try {
        const response = await fetch(`/get-private-key/${walletId}`);
        const data = await response.json();

        if (data.success) {
          document.getElementById('resultMessage').innerText = `Private Key: ${data.privateKey}`;
        } else {
          document.getElementById('resultMessage').innerText = data.message;
        }

        document.getElementById('resultPopup').style.display = 'flex';
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('resultMessage').innerText = 'An error occurred. Please try again.';
        document.getElementById('resultPopup').style.display = 'flex';
      }
    }

    // Function to close the result popup
    function closeResultPopup() {
      document.getElementById('resultPopup').style.display = 'none';
    }
  </script>
</body>
</html>
